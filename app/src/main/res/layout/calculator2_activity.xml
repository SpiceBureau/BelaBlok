<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    tools:context=".calculator.CalculatorScreen">

    <ImageView
        android:id="@+id/Herc"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleX="0.66667"
        android:scaleY="0.66667"
        android:src="@drawable/herc_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.1">
    </ImageView>

    <ImageView
        android:id="@+id/Tref"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleX="0.66667"
        android:scaleY="0.66667"
        android:src="@drawable/tref_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.366667"
        app:layout_constraintVertical_bias="0.1">
    </ImageView>

    <ImageView
        android:id="@+id/Pik"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleX="0.66667"
        android:scaleY="0.66667"
        android:src="@drawable/pik_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.63333"
        app:layout_constraintVertical_bias="0.1">
    </ImageView>

    <ImageView
        android:id="@+id/Kara"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleX="0.66667"
        android:scaleY="0.66667"
        android:src="@drawable/kara_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.1">
    </ImageView>

    <TextView
        android:id="@+id/player1"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Player 1"
        android:textColor="@color/white"
        android:background="@drawable/rounded_text_neutral"
        app:layout_constraintTop_toBottomOf="@id/Tref"
        app:layout_constraintBottom_toTopOf="@id/player4"
        app:layout_constraintEnd_toStartOf="@id/player2"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/player1ShuffleImg"
        app:layout_constraintStart_toStartOf="@id/player1"
        app:layout_constraintEnd_toEndOf="@id/player1"
        app:layout_constraintTop_toTopOf="@+id/player1"
        app:layout_constraintBottom_toBottomOf="@id/player1"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.9">
    </ImageView>

    <TextView
        android:id="@+id/player3"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Player 3"
        android:textColor="@color/white"
        android:background="@drawable/rounded_text_neutral"
        app:layout_constraintTop_toTopOf="@id/player4"
        app:layout_constraintBottom_toBottomOf="@id/player4"
        app:layout_constraintEnd_toStartOf="@id/player4"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <TextView
        android:id="@+id/player2"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Player 2"
        android:textColor="@color/white"
        android:background="@drawable/rounded_text_neutral"
        app:layout_constraintTop_toBottomOf="@id/Tref"
        app:layout_constraintBottom_toTopOf="@id/player4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/player1">
    </TextView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/player2ShuffleImg"
        app:layout_constraintStart_toStartOf="@id/player2"
        app:layout_constraintEnd_toEndOf="@id/player2"
        app:layout_constraintTop_toTopOf="@+id/player2"
        app:layout_constraintBottom_toBottomOf="@id/player2"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.9">
    </ImageView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/player3ShuffleImg"
        app:layout_constraintStart_toStartOf="@id/player3"
        app:layout_constraintEnd_toEndOf="@id/player3"
        app:layout_constraintTop_toTopOf="@+id/player3"
        app:layout_constraintBottom_toBottomOf="@id/player3"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.9">
    </ImageView>

    <TextView
        android:id="@+id/player4"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Player 4"
        android:textColor="@color/white"
        android:background="@drawable/rounded_text_neutral"
        app:layout_constraintTop_toBottomOf="@id/player1"
        app:layout_constraintBottom_toTopOf="@id/divider1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/player3">
    </TextView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/player4ShuffleImg"
        app:layout_constraintStart_toStartOf="@id/player4"
        app:layout_constraintEnd_toEndOf="@id/player4"
        app:layout_constraintTop_toTopOf="@+id/player4"
        app:layout_constraintBottom_toBottomOf="@id/player4"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.9">
    </ImageView>

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:id="@+id/divider1"
        app:layout_constraintTop_toTopOf="@id/etMi"
        app:layout_constraintBottom_toTopOf="@id/etVi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:id="@+id/etMi"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pointDirrection"
        android:hint="0"
        android:inputType="number"
        android:cursorVisible="false"
        android:paddingBottom="0dp"
        android:background="@null"
        android:textColorHint="@color/miColor"
        android:gravity="center"
        android:textSize="80sp"
        android:textStyle="bold"
        android:imeOptions="actionDone"
        android:textColor="@color/miColor">
    </EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:id="@+id/etVi"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintStart_toEndOf="@id/pointDirrection"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="0"
        android:inputType="number"
        android:cursorVisible="false"
        android:paddingBottom="0dp"
        android:background="@null"
        android:textColorHint="@color/viColor"
        android:gravity="center"
        android:textSize="80sp"
        android:textStyle="bold"
        android:imeOptions="actionDone"
        android:textColor="@color/viColor">
    </EditText>

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:id="@+id/divider2"
        app:layout_constraintTop_toBottomOf="@id/etMi"
        app:layout_constraintBottom_toTopOf="@id/btn50Calls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/pointDirrection"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textOff="Mi"
        android:textOn="Vi"
        android:background="@drawable/rounded_toggle_button"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintBottom_toTopOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5">
    </ToggleButton>

    <TextView
        android:id="@+id/btn20Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:background="@color/base_background"
        android:text="20"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btn50Calls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/btn50Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="50"
        android:textSize="32sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/btn100Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="100"
        android:textSize="32sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn50Calls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btn150Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="150"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/base_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn200Calls"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.82"/>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btn200Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="200"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/base_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.82"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btnŠtiljonž"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="Štiljonž"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/base_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn200Calls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.82"
        app:layout_constraintHorizontal_bias="0.5"/>


    <ImageView
        android:id="@+id/btnPad"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/falling_downw"
        android:scaleX="0.6"
        android:scaleY="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnDone"
        app:layout_constraintBottom_toBottomOf="@id/btnDone"
        app:layout_constraintStart_toEndOf="@id/btnDone"
        app:layout_constraintHorizontal_bias="0.5"/>

    <ImageView
        android:id="@+id/btnClear"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/trash_can"
        app:layout_constraintEnd_toStartOf="@id/btnDone"
        app:layout_constraintTop_toTopOf="@id/btnDone"
        app:layout_constraintBottom_toBottomOf="@id/btnDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5">
    </ImageView>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btnDone"
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:textStyle="bold"
        android:textSize="38sp"
        android:text="Done"
        android:background="@drawable/rounded_text_neutral"
        app:layout_constraintEnd_toStartOf="@id/btnPad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnClear"
        app:layout_constraintVertical_bias="0.96"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/ctvMI20"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:elevation="2dp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_mi"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/btn20Calls"
        app:layout_constraintEnd_toEndOf="@id/btn20Calls"
        app:layout_constraintStart_toStartOf="@id/btn20Calls"
        app:layout_constraintTop_toTopOf="@id/btn20Calls"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.2"
        />

    <TextView
        android:id="@+id/ctvVI20"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:elevation="2dp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_vi"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/btn20Calls"
        app:layout_constraintEnd_toEndOf="@id/btn20Calls"
        app:layout_constraintStart_toStartOf="@id/btn20Calls"
        app:layout_constraintTop_toTopOf="@id/btn20Calls"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.2"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:textStyle="bold"
        android:elevation="2dp"
        android:visibility="invisible"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_mi"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/ctv50MI"
        app:layout_constraintBottom_toBottomOf="@id/btn50Calls"
        app:layout_constraintEnd_toEndOf="@id/btn50Calls"
        app:layout_constraintStart_toStartOf="@id/btn50Calls"
        app:layout_constraintTop_toTopOf="@id/btn50Calls"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:textStyle="bold"
        android:elevation="2dp"
        android:visibility="invisible"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_vi"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/ctv50VI"
        app:layout_constraintBottom_toBottomOf="@id/btn50Calls"
        app:layout_constraintEnd_toEndOf="@id/btn50Calls"
        app:layout_constraintStart_toStartOf="@id/btn50Calls"
        app:layout_constraintTop_toTopOf="@id/btn50Calls"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.9"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_mi"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/ctv100MI"
        app:layout_constraintBottom_toBottomOf="@id/btn100Calls"
        app:layout_constraintEnd_toEndOf="@id/btn100Calls"
        app:layout_constraintStart_toStartOf="@id/btn100Calls"
        app:layout_constraintTop_toTopOf="@id/btn100Calls"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_vi"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/ctv100VI"
        app:layout_constraintBottom_toBottomOf="@id/btn100Calls"
        app:layout_constraintEnd_toEndOf="@id/btn100Calls"
        app:layout_constraintStart_toStartOf="@id/btn100Calls"
        app:layout_constraintTop_toTopOf="@id/btn100Calls"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>