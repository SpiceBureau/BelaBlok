<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    tools:context=".Calculator">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etMi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etMiSum"
        android:hint="0"
        android:inputType="number"
        android:cursorVisible="false"
        android:paddingBottom="0dp"
        android:background="@null"
        android:textColorHint="@color/miColorDisplay"
        android:gravity="center"
        android:textSize="85sp"
        android:textStyle="bold"
        android:imeOptions="actionDone"
        android:textColor="@color/miColorDisplay">
    </EditText>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etMiSum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/divider1"
        app:layout_constraintStart_toEndOf="@+id/etMi"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="0dp"
        android:background="@null"
        android:gravity="center"
        android:textSize="85sp"
        android:textStyle="bold"
        android:textColor="@color/miColor"
        android:text="0">
    </TextView>

    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:id="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@id/etMi"
        app:layout_constraintBottom_toTopOf="@id/etVi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etVi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etViSum"
        app:layout_constraintVertical_bias="0.2"
        android:hint="0"
        android:cursorVisible="false"
        android:textColorHint="@color/viColorDisplay"
        android:inputType="number"
        android:paddingBottom="0dp"
        android:background="@null"
        android:gravity="center"
        android:textSize="85sp"
        android:textStyle="bold"
        android:imeOptions="actionDone"
        android:textColor="@color/viColorDisplay">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etViSum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etVi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:paddingBottom="0dp"
        android:background="@null"
        android:gravity="center"
        android:textSize="85sp"
        android:textStyle="bold"
        android:textColor="@color/viColor"
        android:text="0">
    </TextView>

    <ImageView
        android:id="@+id/Herc"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/herc_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.4">
    </ImageView>

    <ImageView
        android:id="@+id/Tref"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/tref_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintVertical_bias="0.4">
    </ImageView>

    <ImageView
        android:id="@+id/Pik"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/pik_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintVertical_bias="0.4">
    </ImageView>

    <ImageView
        android:id="@+id/Kara"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/kara_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintVertical_bias="0.4">
    </ImageView>

    <ToggleButton
        android:id="@+id/pointDirrection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Mi"
        android:textOn="Vi"
        android:background="@drawable/rounded_toggle_button"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@id/Tref"
        app:layout_constraintBottom_toTopOf="@id/btn50Calls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.70">
    </ToggleButton>


    <TextView
        android:id="@+id/btn20Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:background="@color/base_background"
        android:text="20"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btn50Calls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/btn50Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="50"
        android:textSize="32sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.64"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/btn100Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="100"
        android:textSize="32sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn50Calls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.64"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btn150Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="150"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/base_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn200Calls"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.74"/>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btn200Calls"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="200"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/base_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.74"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btnŠtiljonž"
        android:layout_width="124dp"
        android:layout_height="92dp"
        android:text="Štiljonž"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/base_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn200Calls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.74"
        app:layout_constraintHorizontal_bias="0.5"/>


    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btnPad"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:text="Pad"
        android:textStyle="bold"
        android:textSize="38sp"
        android:background="@color/base_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn200Calls"
        app:layout_constraintBottom_toTopOf="@id/btnDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="1"/>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btnClear"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:textStyle="bold"
        android:text="Clear"
        android:textSize="38sp"
        android:background="@color/base_background"
        app:layout_constraintEnd_toStartOf="@id/btnDone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintHorizontal_bias="0.5">
    </Button>

    <Button
        android:stateListAnimator="@null"
        android:id="@+id/btnDone"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:textStyle="bold"
        android:textSize="38sp"
        android:text="Done"
        android:background="@color/base_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnClear"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/ctvMI20"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:elevation="2dp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_mi"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/btn20Calls"
        app:layout_constraintEnd_toEndOf="@id/btn20Calls"
        app:layout_constraintStart_toStartOf="@id/btn20Calls"
        app:layout_constraintTop_toTopOf="@id/btn20Calls"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.2"
        />

    <TextView
        android:id="@+id/ctvVI20"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:elevation="2dp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_vi"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/btn20Calls"
        app:layout_constraintEnd_toEndOf="@id/btn20Calls"
        app:layout_constraintStart_toStartOf="@id/btn20Calls"
        app:layout_constraintTop_toTopOf="@id/btn20Calls"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.2"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:textStyle="bold"
        android:elevation="2dp"
        android:visibility="invisible"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_mi"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/ctv50MI"
        app:layout_constraintBottom_toBottomOf="@id/btn50Calls"
        app:layout_constraintEnd_toEndOf="@id/btn50Calls"
        app:layout_constraintStart_toStartOf="@id/btn50Calls"
        app:layout_constraintTop_toTopOf="@id/btn50Calls"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:textStyle="bold"
        android:elevation="2dp"
        android:visibility="invisible"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_vi"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/ctv50VI"
        app:layout_constraintBottom_toBottomOf="@id/btn50Calls"
        app:layout_constraintEnd_toEndOf="@id/btn50Calls"
        app:layout_constraintStart_toStartOf="@id/btn50Calls"
        app:layout_constraintTop_toTopOf="@id/btn50Calls"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.9"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_mi"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/ctv100MI"
        app:layout_constraintBottom_toBottomOf="@id/btn100Calls"
        app:layout_constraintEnd_toEndOf="@id/btn100Calls"
        app:layout_constraintStart_toStartOf="@id/btn100Calls"
        app:layout_constraintTop_toTopOf="@id/btn100Calls"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text=""
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="15sp"
        android:background="@drawable/circle_textview_vi"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/ctv100VI"
        app:layout_constraintBottom_toBottomOf="@id/btn100Calls"
        app:layout_constraintEnd_toEndOf="@id/btn100Calls"
        app:layout_constraintStart_toStartOf="@id/btn100Calls"
        app:layout_constraintTop_toTopOf="@id/btn100Calls"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>