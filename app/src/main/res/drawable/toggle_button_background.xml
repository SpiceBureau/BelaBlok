<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Off state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/miColor" />
            <!-- Add other attributes for the button's appearance in the off state -->
        </shape>
    </item>
    <!-- On state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/viColor" />
            <!-- Add other attributes for the button's appearance in the on state -->
        </shape>
    </item>
</selector>
